<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/student_fragement_viewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btm_nav_bar"
            tools:layout="@layout/student_course_enrolled_fragment" />


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/btm_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        app:mbn_backgroundBottomColor="@color/green"
        app:mbn_defaultIconColor="@android:color/white"
        app:mbn_selectedIconColor="@color/green"
        app:mbn_shadowColor="@android:color/transparent" />

</RelativeLayout>
