<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_course_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/instructor_btm_nav_bar"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="339dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        tools:ignore="SpeakableTextPresentCheck" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/instructor_fragement_viewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/instructor_course_leading_fragment" />
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/instructor_btm_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        app:mbn_backgroundBottomColor="@color/green"
        app:mbn_defaultIconColor="@android:color/white"
        app:mbn_selectedIconColor="@color/green"
        app:mbn_shadowColor="@android:color/transparent" />

</RelativeLayout>
